  <body>
    <div class="task-container">
      <h2> My Tasker</h2><br />
      <div class="add-task-conatiner">
        <form method="POST" action="submit">
          <input type="text" name="task">

          <input type="submit" value="Add" />
        </form>
        <ul>
        <% for( let i of actual_data){ %>
         <li><%= i.name %><span><a href="delete/<%= i._id %>">Delete</a></span><span><a href="update/<%= i._id %>">Update</a></span></li> 
    
      <% } %>


    </ul>
      </div>
      
    </div> 

    

  </body>

